            <Label Content="Pass :" FontSize="50" Foreground="White" HorizontalAlignment="Left" Margin="189,492,0,0" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" FontSize="35" Margin="435,370,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="600" Height="45"/>
            <TextBox HorizontalAlignment="Left" FontSize="35" Margin="435,442,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="600" Height="45"/>
            <TextBox HorizontalAlignment="Left" FontSize="35" Margin="435,514,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="600" Height="45"/>

        </Grid>
    </Border>
